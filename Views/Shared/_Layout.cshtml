
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        @RenderSection("HeadContent", required: false)
    </head>
    <body>
        <div class="page">
            <header>
                <div id="title">
                    <h1>PiF App</h1>
                </div>
                <div id="logindisplay">
                    @Html.Partial("_LoginPartial")
                </div>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        @if (!string.IsNullOrEmpty(User.Identity.Name))
                        {
                            <li>@Html.ActionLink(User.Identity.Name, "Me", "Account")</li>
                        }
                        <li>@Html.ActionLink("New PiF", "New", "PiF")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                </nav>
            </header>
            <section id="main">
                @RenderBody()
            </section>
            <footer>
            </footer>
        </div>
    </body>
</Html>