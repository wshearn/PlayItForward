@using PiF.Models
@if (Request.IsAuthenticated)
{
    <text>@Html.ActionLink(User.Identity.Name, "Me", "Account") <span class="points">(@AccountHelper.CurrentUser.GivenCount · @AccountHelper.CurrentUser.ReceivedCount</span>) | @Html.ActionLink("Sign out", "LogOff", "Account")</text>
}
else
{
    @Html.ActionLink("Sign in", "Login", "Account")
}